@model IEnumerable<emarket.Models.Product>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<hr />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-2">
            <div class="card thumbnail">
                <div class="car-header">
                    <a href="@Url.Action("Details","Products", new { id = product.Id })"><img src="~/Uploads/@product.Image" style="height:150px;" /></a>
                </div>
                <div class="card-body">
                    <h4 style="overflow: hidden;">@product.Name</h4>
                    <h4 style="overflow: hidden;">@product.Price.ToString("#.##") LE</h4>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Details","Products", new { id = product.Id })" class="btn btn-primary">+ Add To Cart</a>
                    @*@using (Html.BeginForm("Delete", "Products", new { id = product.Id }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Del" class="btn btn-success" name="Del" onclick="javascript:return ShowMessage();" />

                    }*@
                </div>
            </div>
        </div>

    }
</div>

<script>
            function ShowMessage() {
                var result = confirm("Do you want to delete this product ?");
                if (result) {
                    return true;
                } else {
                    return false;
                }
            }
</script>