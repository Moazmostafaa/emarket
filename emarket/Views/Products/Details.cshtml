@model emarket.ViewModels.Product.ProductViewModel


<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Product Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body" style="text-align:center">
    <h3 style="background-color:#f2ecec;padding:5px">@Model.Product.Name - @Model.Product.Price.ToString("#.##") EGP (@Model.CategoryName)</h3>
    <div style="text-align: -webkit-center;">
        <img  src="~/Uploads/@Html.DisplayFor(model => model.Product.Image)"
             class="thumbnail img-fluid"
             style="max-width: -webkit-fill-available; height : 200px; text-align:center" />
    </div>
    <h3>
        <p>@Model.Product.Description</p>
    </h3>
</div>
<div class="modal-footer" style="text-align:center">

    @using (Html.BeginForm("Delete", "Products", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Product.Id" />
        <button type="submit" class="btn btn-danger" onclick="javascript:return ShowMessage();">Delete</button>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Product.Id }, new { @class = "btn btn-success" })
    }
</div>


<script>
    function ShowMessage() {
        var result = confirm("Do you want to delete this product ?");
        if (result) {
            return true;
        } else {
            return false;
        }
    }
</script>